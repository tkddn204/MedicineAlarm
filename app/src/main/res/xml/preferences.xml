<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="alarm_switch"
        android:switchTextOff="OFF"
        android:switchTextOn="ON"
        android:summary="@string/pref_description_alarm_switch"
        android:title="@string/pref_title_alarm_switch" />

    <ListPreference
        android:defaultValue="10"
        android:key="re_alarm_list"
        android:entries="@array/pref_re_alarm_titles"
        android:entryValues="@array/pref_re_alarm_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_re_alarm" />

</PreferenceScreen>
