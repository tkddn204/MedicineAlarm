<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button_take_medicine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/notification_take_medicine"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_do_not_take_medicine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/notification_not_take_medicine"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_re_alarm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/notification_re_alarm"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_not_yet_take_medicine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/notification_not_yet_take_medicine"
        android:textSize="20sp" />
</LinearLayout>