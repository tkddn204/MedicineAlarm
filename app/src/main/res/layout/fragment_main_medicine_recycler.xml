<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ssangwoo.medicationalarm.views.fragments.MedicineRecyclerFragment">

    <com.ssangwoo.medicationalarm.lib.RecyclerViewEmptySupport
        android:id="@+id/medicine_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/medicine_recycler_empty_container"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/very_light_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerInParent="true"
            android:id="@+id/medicine_empty_image"
            android:src="@drawable/ic_empty_medicine" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/medicine_empty_image"
            android:layout_centerHorizontal="true"
            android:text="@string/medicine_empty"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="24sp"
            android:id="@+id/textView" />
    </RelativeLayout>
</RelativeLayout>